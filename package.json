{
  "name": "vscode-extension-paste-image",
  "displayName": "vscode-extension-paste-image",
  "description": "Easy to paste image for VSCode",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-extension-paste-image.pasteImage",
    "onCommand:vscode-extension-paste-image.insertGyazo"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Paste Image Configuration",
      "properties": {
        "pasteImage.path": {
          "type": "string",
          "default": "${currentFileDir}",
          "description": "The destination to save image file.You can use variable ${currentFileDir} and ${projectRoot}. ${currentFileDir} will be replace by the path of directory that contain current editing file. ${projectRoot} will be replace by path of the project opened in vscode."
        },
        "pasteImage.cloudinaryName": {
          "type": "string",
          "description": "Type your Cloudinary username when you use Cloudinary."
        },
        "pasteImage.cloudinaryAPIKey": {
          "type": "string",
          "description": "Type your Cloudinary API Key when you use Cloudinary."
        },
        "pasteImage.cloudinaryAPISecret": {
          "type": "string",
          "description": "Type your Cloudinary API Secret when you use Cloudinary."
        }
      }
    },
    "commands": [
      {
        "command": "vscode-extension-paste-image.pasteImage",
        "title": "Insert from Clipboard via Cloud"
      },
      {
        "command": "vscode-extension-paste-image.insertGyazo",
        "title": "Insert from GyazoURL"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "esbuild": "^0.15.3",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "cloudinary": "^1.30.1",
    "got": "^12.3.1"
  }
}
